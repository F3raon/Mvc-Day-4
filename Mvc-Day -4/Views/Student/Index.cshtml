@model IEnumerable<Student>

<div class="d-flex justify-content-center">
    <h1 class="text-success">Student Portal</h1>
</div>

<br/>
<hr />
<br/>


<table class="table text-center">
    <thead>
        <tr>
            
            <th scope="col">@Html.DisplayNameFor(e=>e.Id)</th>
            <th scope="col">@Html.DisplayNameFor(e=>e.Name)</th>
            <th scope="col">@Html.DisplayNameFor(e=>e.Age)</th>
            <th scope="col">@Html.DisplayNameFor(e=>e.Address)</th>
            <th scope="col">@Html.DisplayNameFor(e=>e.Email)</th>
            <th scope="col">@Html.DisplayNameFor(e=>e.Salary)</th>
            <th scope="col">@Html.DisplayNameFor(e=>e.Department)</th>
            <th scope="col" colspan="3">Actions</th>
            
        </tr>
    </thead>
    <tbody>
      @foreach (var item in Model)
        {
            <tr>

                <th scope="col ">@item.Id</th>
                <th scope="col ">@item.Name</th>
                <th scope="col ">@item.Age</th>
                <th scope="col ">@item.Address</th>
                <th scope="col ">@item.Email</th>
                <th scope="col ">@item.Salary</th>
                <th scope="col ">@item.Department.DeptName</th>
                <td scope="col">
                    <a asp-controller="Student" asp-action="Details" asp-route-Id="@item.Id" class="btn btn-primary">View</a>
                </td>
                <td scope="col">
                    <a asp-controller="Student" asp-action="Edit" asp-route-Id="@item.Id" class="btn btn-secondary">Edit</a>
                </td>
                <td scope="col">
                    <form asp-controller="Student" asp-action="Delete" asp-route-Id="@item.Id" method="post" onsubmit="return confirm('Are you sure  want to delete this item?')">
                        <button type="submit" class="btn btn-danger">Delete</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
    <tfoot>
        <a asp-controller="Student" asp-action="Create" class="btn btn-success">Add Student</a>
    </tfoot>
</table>