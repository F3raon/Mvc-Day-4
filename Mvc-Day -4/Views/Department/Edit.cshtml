@model Department

<br />

<div class="d-flex justify-content-center">
    <h2 class="text-success">Edit Department</h2>
</div>

<br />
<hr />
<br />

<form asp-action="Edit">

    <div class="form-group mt-5">
        <label asp-for="DeptName" class="form-label"></label>
        <input asp-for="DeptName" class="form-control" />
    </div>

    <div class="d-flex justify-content-center gap-3 m-5">
        <input type="submit" value="Edit Department" class="btn btn-success" />
        <a asp-controller="Department" asp-action="Index" class="btn btn-secondary">Cancel</a>
    </div>

</form>